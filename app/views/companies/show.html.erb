
<div class="flex justify-center">
  <div class="appearance-none rounded w-full py-4 md:py-16 px-9 md:px-48 text-gray-700 leading-tight focus:outline-none focus:shadow-outline flex flex-col items-center">
    <h2 class="font-sans font-semibold text-center m-6 md:m-2 text-2xl md:text-4xl md:pb-8">COMPANY INFO</h2>
    <div class="flex-col mr-2 w-full md:w-1/2 mb-2 items-center text-m md:text-xl">
      <div class="border border-teal-700 rounded text-center mb-2 md:flex md:h-10 md:items-center md:justify-center">
        <%= @company.name %>
      </div>

      <div class="border mb-4 md:mb-8 border-teal-700 rounded text-center md:flex md:h-10 md:items-center md:justify-center">
        <%= @company.address %>
      </div>
    </div>

    <%= link_to 'Edit', edit_company_path(@company), class:"  mt-2 text-center h-10 pt-2 md:h-14 flex-shrink-0 bg-gray-900 hover:bg-gray-600 border-teal-500 hover:border-teal-700 text-sm md:text-xl w-full md:w-1/2 text-white py-1 px-2 rounded" %> 
    <%= link_to 'Back', companies_path, class:"  mt-2 text-center h-10 pt-2 md:h-14 flex-shrink-0 bg-gray-900 hover:bg-gray-600 border-teal-500 hover:border-teal-700 text-sm md:text-xl w-full md:w-1/2 text-white py-1 px-2 rounded" %>
  </div>
</div>
