<%= content_for :title do %>
  <h1> Employee: <%= @employee.name %></h1>
<% end %>
<%= content_for :primary_content do %>
  <p id="notice"><%= notice %></p>
  <p>
    <strong>Email:</strong>
    <%= @employee.email %>
  </p>
  <p>
    <strong>Private number:</strong>
    <%= @employee.private_number %>
  </p>
<% end %>
<%= content_for :actions do %>
  <%= link_to 'Edit', edit_employee_path(@employee), class:'btn btn__primary' %> 
  <%= link_to 'Back', employees_path, class:'btn btn__secondary' %>
<% end %>
<%= render 'crud_layout' %>
